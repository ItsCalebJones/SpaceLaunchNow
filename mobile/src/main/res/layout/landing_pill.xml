<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_margin="@dimen/material_baseline_grid_1x"
    android:padding="@dimen/material_baseline_grid_1x"
    app:cardElevation="4dp"
    app:cardBackgroundColor="?attr/titleBarColor"
    app:cardCornerRadius="10dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/landing_icon"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:padding="4dp"
            app:srcCompat="@drawable/ic_landing" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="|"
            android:textAlignment="center"
            android:textColor="@color/dark_primary_text_color_selector"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/landing"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="4dp"
            android:gravity="center"
            android:text=""
            android:textAlignment="center"
            android:textAppearance="@style/MaterialTypography.Locale.Subheading"
            android:textColor="@color/dark_primary_text_color_selector"
            android:textSize="16sp"
            android:typeface="normal"
            tools:text="OSCILY" />

    </LinearLayout>
</androidx.cardview.widget.CardView>