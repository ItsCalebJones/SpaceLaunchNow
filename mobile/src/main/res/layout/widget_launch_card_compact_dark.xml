<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/widget_compact_card_frame"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:layout_gravity="center">

        <ImageView
            android:id="@+id/bgcolor"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:scaleType="fitXY" />

    <LinearLayout
        android:id="@+id/TitleCard"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/widget_categoryIcon"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:padding="@dimen/material_baseline_grid_0.5x"
            android:layout_marginStart="@dimen/material_baseline_grid_1x"
            android:layout_marginEnd="@dimen/material_baseline_grid_0.5x"
            android:src="@drawable/ic_unknown_white" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/material_baseline_grid_0.5x"
            android:layout_gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/widget_launch_mission"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-condensed"
                android:gravity="left"
                android:maxLines="1"
                android:paddingTop="4dp"
                android:text="@string/unknown_mission"
                android:textColor="?android:attr/textColorPrimaryInverse"
                android:textSize="20sp"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/widget_launch_rocket"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:gravity="left"
                android:maxLines="1"
                android:padding="2dp"
                android:singleLine="false"
                android:text="@string/unknown_launch_vehicle"
                android:textSize="16sp"
                android:textColor="?android:attr/textColorSecondaryInverse"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/widget_location"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:gravity="left"
                android:maxLines="1"
                android:padding="2dp"
                android:singleLine="false"
                android:textSize="16sp"
                android:textColor="?android:attr/textColorSecondaryInverse"
                android:text="@string/unknown_launch_location" />

            <TextView
                android:id="@+id/widget_launch_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:gravity="left"
                android:maxLines="1"
                android:padding="2dp"
                android:singleLine="false"
                android:textSize="16sp"
                android:textColor="?android:attr/textColorSecondaryInverse"
                android:text="@string/unknown_launch_date" />

        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_gravity="top|right"
        android:src="@drawable/ic_refresh_white"
        android:layout_marginTop="12dp"
        android:layout_marginRight="12dp"
        android:id="@+id/widget_compact_card_refresh_button" />
    </FrameLayout>

</LinearLayout>