            card_view:cardPreventCornerOverlap="true"
            card_view:cardUseCompatPadding="true">

            <LinearLayout
                android:id="@+id/vehicle_agencies"
                style="@style/DarkTheme"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/launch_agency_title"
                    style="@style/DarkTheme"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:lines="1"
                    android:paddingLeft="16dp"
                    android:paddingTop="8dp"
                    android:text="Vehicle Agencies"
                    android:textAlignment="center"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:gravity="center" />

                <TextView
                    android:id="@+id/launch_agency_type"
                    style="@style/DarkTheme"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:lines="1"
                    android:paddingBottom="32dp"
                    android:paddingLeft="16dp"
                    android:paddingTop="8dp"
                    android:singleLine="false"
                    android:text="Unknown Vehicle Agencies"
                    android:textAlignment="center"
                    android:textColor="?android:textColorSecondary"
                    android:gravity="center" />

                <LinearLayout
                    android:id="@+id/agency_one"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <View
                        style="@style/LightTheme"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_margin="8dp"
                        android:background="@color/View_Separator"
                        android:padding="12dp" />

                    <TextView
                        android:id="@+id/launch_vehicle_agency_one"
                        style="@style/DarkTheme"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:gravity="left"
                        android:lines="1"
                        android:paddingLeft="16dp"
                        android:paddingTop="4dp"
                        android:singleLine="false"
                        android:text="Agency One"
                        android:textColor="?android:textColorSecondary" />

                    <TextView
                        android:id="@+id/launch_agency_type_one"
                        style="@style/DarkTheme"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:gravity="left"
                        android:lines="1"
                        android:paddingBottom="8dp"
                        android:paddingLeft="16dp"
                        android:paddingTop="4dp"
                        android:singleLine="false"
                        android:text="Unknown Agency Type"
                        android:textColor="?android:textColorSecondary" />

                    <TextView
                        android:id="@+id/launch_agency_summary_one"
                        style="@style/LightTheme"
                        android:visibility="gone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:gravity="left"
                        android:paddingBottom="8dp"
                        android:paddingLeft="16dp"
                        android:paddingTop="4dp"
                        android:singleLine="false"
                        android:text=""
                        android:textColor="?android:textColorSecondary" />

                    <LinearLayout
                        style="@style/DarkTheme"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <android.support.v7.widget.AppCompatButton
                            android:id="@+id/infoButton_one"
                            style="@style/Base.Widget.AppCompat.Button.Colored"
                            android:layout_width="wrap_content"
                            android:layout_height="50dp"
                            android:layout_alignParentBottom="false"
                            android:layout_alignParentLeft="false"
                            android:layout_alignParentTop="false"
                            android:layout_marginBottom="12dp"
                            android:layout_marginLeft="8dp"
                            android:layout_marginTop="2dp"
                            android:gravity="center"
                            android:text="INFO"
                            android:textColor="@color/white"
                            android:textSize="12sp" />

                        <android.support.v7.widget.AppCompatButton
                            android:id="@+id/wikiButton_one"
                            style="@style/Base.Widget.AppCompat.Button.Colored"
                            android:layout_width="wrap_content"
                            android:layout_height="50dp"
                            android:layout_alignParentBottom="false"
                            android:layout_alignParentLeft="false"
                            android:layout_alignParentTop="false"
                            android:layout_marginBottom="12dp"
                            android:layout_marginLeft="8dp"
                            android:layout_marginTop="2dp"
                            android:gravity="center"
                            android:text="WIKI"
                            android:textColor="@color/white"
                            android:textSize="12sp" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/agency_two"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <View
                        style="@style/DarkTheme"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_margin="16dp"
                        android:background="@color/View_Separator"
                        android:padding="12dp" />

                    <TextView
                        android:id="@+id/launch_vehicle_agency_two"
                        style="@style/DarkTheme"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:gravity="left"
                        android:lines="1"
                        android:paddingLeft="16dp"
                        android:paddingTop="4dp"
                        android:singleLine="false"
                        android:text="Agency Two"
                        android:textColor="?android:textColorSecondary" />

                    <TextView
                        android:id="@+id/launch_agency_type_two"
                        style="@style/DarkTheme"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:gravity="left"
                        android:lines="1"
                        android:paddingBottom="8dp"
                        android:paddingLeft="16dp"
                        android:paddingTop="4dp"
                        android:singleLine="false"
                        android:text="Unknown Agency Type"
                        android:textColor="?android:textColorSecondary" />

                    <TextView
                        android:id="@+id/launch_agency_summary_two"
                        style="@style/LightTheme"
                        android:visibility="gone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:gravity="left"
                        android:paddingBottom="8dp"
                        android:paddingLeft="16dp"
                        android:paddingTop="4dp"
                        android:singleLine="false"
                        android:text=""
                        android:textColor="?android:textColorSecondary" />

                    <LinearLayout
                        style="@style/DarkTheme"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <android.support.v7.widget.AppCompatButton
                            android:id="@+id/infoButton_two"
                            style="@style/Base.Widget.AppCompat.Button.Colored"
                            android:layout_width="wrap_content"
                            android:layout_height="50dp"
                            android:layout_alignParentBottom="false"
                            android:layout_alignParentLeft="false"
                            android:layout_alignParentTop="false"
                            android:layout_marginBottom="12dp"
                            android:layout_marginLeft="16dp"
                            android:layout_marginTop="2dp"
                            android:gravity="center"
                            android:text="INFO"
                            android:textColor="@color/white"
                            android:textSize="12sp" />

                        <android.support.v7.widget.AppCompatButton
                            android:id="@+id/wikiButton_two"
                            style="@style/Base.Widget.AppCompat.Button.Colored"
                            android:layout_width="wrap_content"
                            android:layout_height="50dp"
                            android:layout_alignParentBottom="false"
                            android:layout_alignParentLeft="false"
                            android:layout_alignParentTop="false"
                            android:layout_marginBottom="12dp"
                            android:layout_marginLeft="16dp"
                            android:layout_marginTop="2dp"
                            android:gravity="center"
                            android:text="WIKI"
                            android:textColor="@color/white"
                            android:textSize="12sp" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </android.support.v7.widget.CardView>
    </LinearLayout>

</android.support.v4.widget.NestedScrollView>