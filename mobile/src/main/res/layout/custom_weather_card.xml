        app:layout_constraintTop_toTopOf="@+id/day_two_weather_wind_speed_icon"
        tools:text="18 MpH" />


    <com.github.pwittchen.weathericonview.WeatherIconView
        android:id="@+id/day_three_weather_icon"
        android:layout_width="wrap_content"
