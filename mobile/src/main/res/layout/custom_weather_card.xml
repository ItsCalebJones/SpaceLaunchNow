        app:layout_constraintEnd_toEndOf="@+id/day_two_precip_prob_icon"
        app:layout_constraintStart_toStartOf="@+id/day_two_precip_prob_icon"
        app:layout_constraintTop_toBottomOf="@+id/day_two_precip_prob_icon"
