<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/launch_summary"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:tag="launch_summary"
    android:textAlignment="center"
    android:layout_gravity="center"
    android:transitionGroup="true"
    tools:layout_behavior="@string/appbar_scrolling_view_behavior">

    <LinearLayout

        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical">


        <android.support.v7.widget.CardView
            android:layout_width="@dimen/max_width"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="@dimen/material_card_edge_margin"
            android:animateLayoutChanges="true"
            android:padding="@dimen/material_card_edge_margin"
            android:visibility="visible"
            card_view:cardCornerRadius="4dp"
            card_view:cardElevation="@dimen/material_card_elevation_resting"
            card_view:cardPreventCornerOverlap="true"
            card_view:cardUseCompatPadding="true">

            <android.support.constraint.ConstraintLayout

                android:id="@+id/constraint_countdown"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="1">


                <TextView
                    android:id="@+id/error_message"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:background="?attr/titleBarColor"
                    android:ellipsize="end"
                    android:gravity="center"
                    android:textAlignment="center"
                    android:textColor="@color/dark_primary_text_color_selector"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:visibility="gone"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:text="Failed" />

                <FrameLayout
                    android:id="@+id/youtube_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/error_message" />


                <ImageView
                    android:id="@+id/map_view_summary"
                    android:layout_width="0dp"
                    android:layout_height="180dp"
                    android:clickable="true"
                    android:visibility="visible"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/youtube_view"
                    tools:layout_behavior="@string/appbar_scrolling_view_behavior"
                    tools:src="@drawable/placeholder" />


                <TextView
                    android:id="@+id/launch_status"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="4dp"
                    android:background="?attr/titleBarColor"
                    android:ellipsize="end"
                    android:gravity="center"
                    android:paddingBottom="8dp"
                    android:paddingTop="4dp"
                    android:singleLine="false"
                    android:text="@string/unknown_launch_status"
                    android:textAlignment="center"
                    android:textColor="@color/dark_primary_text_color_selector"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toTopOf="@+id/content_TMinus_status"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/map_view_summary" />


                <TextView
                    android:id="@+id/content_TMinus_status"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="1dp"
                    android:ellipsize="end"
                    android:gravity="left"
                    android:singleLine="false"
                    android:text="@string/unknown_countdown_status"
                    android:textAlignment="center"
                    android:textColor="?android:textColorSecondary"
                    android:textSize="16sp"
                    app:layout_constraintBottom_toTopOf="@+id/countdown_layout"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/launch_status" />

                <include
                    android:id="@+id/countdown_layout"
                    layout="@layout/countdown_layout_view"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="6dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginStart="8dp"
                    app:layout_constraintBottom_toTopOf="@+id/countdown_separator"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/content_TMinus_status" />


                <View
                    android:id="@+id/countdown_separator"
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_marginBottom="8dp"
                    android:layout_marginEnd="24dp"
                    android:layout_marginStart="24dp"
                    android:layout_marginTop="8dp"
                    android:background="@color/View_Separator"
                    app:layout_constraintBottom_toTopOf="@+id/launch_date_title"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/countdown_layout" />


                <TextView
                    android:id="@+id/launch_date_title"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:layout_marginStart="8dp"
                    android:gravity="center"
                    android:paddingLeft="8dp"
                    android:paddingRight="8dp"
                    android:paddingTop="4dp"
                    android:text="@string/estimated_launch_date"
                    android:textAlignment="center"
                    android:textAppearance="@style/MaterialTypography.Regular.Subheading"
                    android:textSize="18sp"
                    app:layout_constraintBottom_toTopOf="@+id/date"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/countdown_separator" />

                <TextView
                    android:id="@+id/date"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="24dp"
                    android:layout_marginStart="24dp"
                    android:ellipsize="end"
                    android:gravity="center"
                    android:paddingBottom="2dp"
                    android:paddingLeft="8dp"
                    android:paddingRight="8dp"
                    android:paddingTop="4dp"
                    android:singleLine="false"
                    android:text="@string/unknown_launch_date"
                    android:textAlignment="center"
                    android:textColor="?android:textColorSecondary"
                    app:layout_constraintBottom_toTopOf="@+id/launch_window_text"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/launch_date_title" />

                <TextView
                    android:id="@+id/launch_window_text"

                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="6dp"
                    android:layout_marginEnd="24dp"
                    android:layout_marginStart="24dp"
                    android:ellipsize="end"
                    android:gravity="center"
                    android:paddingBottom="2dp"
                    android:paddingLeft="8dp"
                    android:paddingRight="8dp"
                    android:paddingTop="2dp"
                    android:singleLine="false"
                    android:text="@string/unknown_launch_date"
                    android:textAlignment="center"
                    android:textColor="?android:textColorSecondary"
                    app:layout_constraintBottom_toTopOf="@+id/watchButton"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/date" />


                <android.support.v7.widget.AppCompatButton
                    android:id="@+id/watchButton"
                    style="@style/Base.Widget.AppCompat.Button.Colored"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginStart="8dp"
                    android:gravity="center"
                    android:text="@string/watch_launch"
                    android:textColor="@color/white"
                    android:textSize="12sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/launch_window_text" />


            </android.support.constraint.ConstraintLayout>
        </android.support.v7.widget.CardView>

        <me.calebjones.spacelaunchnow.utils.views.custom.WeatherCard
            android:id="@+id/weather_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/material_baseline_grid_4x"
            android:layout_marginEnd="@dimen/material_card_edge_margin"
            android:layout_marginStart="@dimen/material_card_edge_margin"
            android:layout_marginTop="@dimen/material_card_edge_margin"
            android:animateLayoutChanges="true"
            android:paddingBottom="@dimen/material_baseline_grid_4x"
            android:paddingEnd="@dimen/material_card_edge_margin"
            android:paddingStart="@dimen/material_card_edge_margin"
            android:paddingTop="@dimen/material_card_edge_margin"
            android:visibility="gone"
            app:cardCornerRadius="4dp"
            app:cardElevation="@dimen/material_card_elevation_resting"
            app:cardPreventCornerOverlap="true"
            app:cardUseCompatPadding="true"/>

    </LinearLayout>

</android.support.v4.widget.NestedScrollView>