<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="BaseAppTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="colorPrimary">@color/darkPrimary</item>
        <item name="colorPrimaryDark">@color/darkPrimary_dark</item>
        <item name="colorAccent">@color/darkAccent</item>
        <item name="colorControlNormal">@color/darkIcons</item>
        <item name="colorControlHighlight">@color/cardview_dark_background</item>

        <item name="cardStyle">@style/CardView.Dark</item>
        <item name="md_background_color">@color/dark_card_background</item>


        <item name="android:textColorHighlight">@color/dark_primary_text_color_selector</item>
        <item name="android:textColorPrimary">@color/dark_primary_text_color_selector</item>
        <item name="android:textColor">@color/dark_secondary_text_color_selector</item>
    </style>

    <style name="ShowCaseThemeDark" parent="ShowcaseView">
        <item name="sv_backgroundColor">@color/darkPrimary</item>
        <item name="sv_showcaseColor">@color/darkAccent</item>
        <item name="sv_buttonText">Hide</item>
        <item name="sv_tintButtonColor">true</item>
    </style>

    <style name="CustomPreferenceTheme" parent="@style/PreferenceActivity">
        <item name="colorPrimary">@color/darkPrimary</item>
        <item name="colorPrimaryDark">@color/darkPrimary_dark</item>
        <item name="colorAccent">@color/darkAccent</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.ActionBar" />

    <style name="AppTheme.AppBarOverlay.Dark" parent="ThemeOverlay.AppCompat.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat" />

    <style name="SPL"></style>

    <style name="SPL.SnackBar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="SPL.SnackBar.Layout">
        <item name="android:background">@color/cardview_dark_background</item>
    </style>

    <style name="SPL.SnackBar.Text">
        <item name="android:textSize">14sp</item>
        <item name="android:gravity">left</item>
        <item name="android:padding">10dp</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="SPL.SnackBar.Button">
        <item name="android:padding">10dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:background">@color/cardview_dark_background</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="SPL.SnackBar.Button.Decline">
        <item name="android:background">@null</item>
        <item name="android:layout_width">40dp</item>
    </style>
</resources>