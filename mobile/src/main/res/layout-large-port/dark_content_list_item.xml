<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:transitionGroup="true"
    android:textAlignment="center"
    style="@style/TextAppearance.AppCompat.Headline">

    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:animateLayoutChanges="true"
        card_view:cardBackgroundColor="@color/dark_card_background"
        card_view:cardCornerRadius="0dp"
        card_view:cardElevation="4dp"
        card_view:cardPreventCornerOverlap="true"
        card_view:cardUseCompatPadding="true">

        <LinearLayout
            android:id="@+id/lnrLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/TitleCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:elevation="4dp"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imageIcon"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="4dp"
                    android:padding="8dp" />

                <ImageView
                    android:id="@+id/categoryIcon"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_gravity="center|left"
                    android:layout_marginLeft="4dp"
                    android:padding="8dp"
                    app:srcCompat="@drawable/ic_assignment_white" />

                <TextView
                    android:id="@+id/launch_rocket"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@+id/imageIcon"
                    android:layout_toRightOf="@+id/imageIcon"
                    android:fontFamily="sans-serif-condensed"
                    android:gravity="left"
                    android:maxLines="2"
                    android:paddingTop="8dp"
                    android:paddingRight="16dp"
                    android:text="Unknown Launch Vehicle"
                    android:textColor="?android:textColorPrimary"
                    android:textSize="18sp"
                    android:textStyle="normal" />

                <TextView
                    android:id="@+id/location"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/launch_rocket"
                    android:layout_toEndOf="@+id/imageIcon"
                    android:layout_toRightOf="@+id/imageIcon"
                    android:ellipsize="end"
                    android:gravity="left"
                    android:maxLines="2"
                    android:paddingBottom="2dp"
                    android:paddingRight="16dp"
                    android:paddingTop="4dp"
                    android:singleLine="false"
                    android:text="Unknown Launch Location" />

                <TextView
                    android:id="@+id/launch_date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/location"
                    android:layout_toEndOf="@+id/imageIcon"
                    android:layout_toRightOf="@+id/imageIcon"
                    android:ellipsize="end"
                    android:gravity="left"
                    android:maxLines="2"
                    android:paddingBottom="4dp"
                    android:paddingRight="16dp"
                    android:singleLine="false"
                    android:text="Unknown Launch Date" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <View
                    android:id="@+id/separator"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/View_Separator"
                    android:padding="32dp" />

                <me.calebjones.spacelaunchnow.ui.widget.StaticMapView
                    android:id="@+id/map_view"
                    android:layout_width="fill_parent"
                    android:layout_height="160dp"
                    android:scaleType="centerCrop"
                    app:aspectRatio="2" />

                <!--<com.google.android.gms.maps.MapView-->
                <!--xmlns:map="http://schemas.android.com/apk/res-auto"-->
                <!--android:id="@+id/staticMap"-->
                <!--android:layout_width="fill_parent"-->
                <!--android:layout_height="160dp"-->
                <!--android:layout_below="@+id/separator"-->
                <!--android:clickable="false"-->
                <!--map:liteMode="true"-->
                <!--map:mapType="none"-->
                <!--tools:layout_behavior="@string/appbar_scrolling_view_behavior" />-->

                <android.support.design.widget.FloatingActionButton
                    android:id="@+id/fab"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@id/map_view"
                    android:layout_alignParentRight="true"
                    android:layout_marginBottom="-32dp"
                    android:layout_marginRight="20dp"
                    android:clickable="true"
                    android:elevation="8dp"
                    app:srcCompat="@drawable/ic_explore" />

                <TextView
                    android:id="@+id/content_mission"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/map_view"
                    android:elevation="0dp"
                    android:paddingLeft="28dp"
                    android:paddingRight="28dp"
                    android:paddingTop="16dp"
                    android:text="Unknown Mission"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginRight="52dp"
                    android:textColor="?android:textColorPrimary" />
            </RelativeLayout>

            <View
                android:id="@+id/separator_mission"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="8dp"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp"
                android:background="@color/View_Separator"
                android:padding="12dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingBottom="4dp"
                android:paddingLeft="28dp"
                android:paddingRight="28dp"
                android:paddingTop="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/content_status"
                        style="@style/DarkTheme"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:gravity="left"
                        android:paddingBottom="8dp"
                        android:paddingTop="4dp"
                        android:singleLine="true"
                        android:text="Unknown Status"
                        android:textAlignment="center"
                        android:textColor="?android:textColorPrimary"
                        android:textSize="20dp"
                        android:theme="@style/DarkTheme"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    style="@style/DarkTheme"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/content_TMinus_status"
                        style="@style/DarkTheme"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:gravity="left"
                        android:singleLine="false"
                        android:text="Unknown CountDown Status"
                        android:textAlignment="center"
                        android:textColor="?android:textColorSecondary"
                        android:textSize="16sp"
                        android:theme="@style/DarkTheme"
                        android:textIsSelectable="false" />

                    <LinearLayout
                        android:id="@+id/linearLayout"
                        android:layout_width="match_parent"
                        android:layout_height="90dp"
                        android:orientation="horizontal"
                        android:weightSum="4.0"
                        android:layout_marginLeft="30dp"
                        android:layout_marginRight="30dp" >

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="90dp"
                            android:layout_weight="1.0"
                            android:gravity="center"
                            android:orientation="vertical" >

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:padding="0dp"
                                android:scaleX="1.0"
                                android:scaleY="1.0"
                                android:text="- -"
                                android:textSize="45dp"
                                android:id="@+id/textView3" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="-5dp"
                                android:padding="0dp"
                                android:text="DAYS"
                                android:textSize="12dp" />
                        </LinearLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:padding="0dp"
                            android:scaleX="1.0"
                            android:scaleY="1.0"
                            android:text=":"
                            android:gravity="center"
                            android:layout_marginBottom="15dp"
                            android:textSize="45dp" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="90dp"
                            android:layout_weight="1.0"
                            android:gravity="center"
                            android:orientation="vertical" >

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:padding="0dp"
                                android:text="- -"
                                android:textSize="45dp"
                                android:id="@+id/textView4" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="-5dp"
                                android:padding="0dp"
                                android:text="HOURS"
                                android:textSize="12dp" />
                        </LinearLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:padding="0dp"
                            android:scaleX="1.0"
                            android:scaleY="1.0"
                            android:text=":"
                            android:gravity="center"
                            android:layout_marginBottom="15dp"
                            android:textSize="45dp" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="90dp"
                            android:layout_weight="1.0"
                            android:gravity="center"
                            android:orientation="vertical" >

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:padding="0dp"
                                android:text="- -"
                                android:textSize="45dp"
                                android:id="@+id/textView5" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="-5dp"
                                android:padding="0dp"
                                android:text="MINUTES"
                                android:textSize="12dp" />
                        </LinearLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:padding="0dp"
                            android:scaleX="1.0"
                            android:scaleY="1.0"
                            android:text=":"
                            android:gravity="center"
                            android:layout_marginBottom="15dp"
                            android:textSize="45dp" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="90dp"
                            android:layout_weight="1.0"
                            android:gravity="center"
                            android:orientation="vertical" >

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:padding="0dp"
                                android:text="- -"
                                android:textSize="45dp"
                                android:id="@+id/textView6" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="-5dp"
                                android:padding="0dp"
                                android:text="SECONDS"
                                android:textSize="12dp" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/content_mission_description_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingBottom="8dp">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    android:layout_marginLeft="24dp"
                    android:layout_marginRight="24dp"
                    android:paddingBottom="8dp"
                    android:background="@color/View_Separator"
                    android:padding="12dp" />


                <TextView
                    android:id="@+id/content_mission_description"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingTop="8dp"
                    android:paddingBottom="8dp"
                    android:paddingLeft="28dp"
                    android:paddingRight="28dp"
                    android:textSize="14sp" />
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="58dp"
                android:orientation="horizontal">

                <android.support.v7.widget.AppCompatButton
                    android:id="@+id/watchButton"
                    style="@style/Base.Widget.AppCompat.Button.Colored"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_alignParentBottom="false"
                    android:layout_alignParentLeft="false"
                    android:layout_alignParentTop="false"
                    android:gravity="center"
                    android:text="Watch Live"
                    android:textColor="@color/white"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="2dp"
                    android:layout_marginBottom="2dp"
                    android:textSize="12sp" />

                <android.support.v7.widget.AppCompatButton
                    android:id="@+id/shareButton"
                    style="@style/Base.Widget.AppCompat.Button.Borderless"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true"
                    android:layout_gravity="right"
                    android:layout_marginRight="10dp"
                    android:padding="10dp"
                    android:text="Share"
                    android:textColor="@color/material_grey_300" />

                <android.support.v7.widget.AppCompatButton
                    android:id="@+id/exploreButton"
                    style="@style/Base.Widget.AppCompat.Button.Borderless"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentBottom="true"
                    android:layout_gravity="right"
                    android:layout_toLeftOf="@id/shareButton"
                    android:text="Explore"
                    android:textColor="@color/material_grey_300" />
            </RelativeLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</android.support.design.widget.CoordinatorLayout>