<resources>

    <style name="LightTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="preferenceTheme">@style/PreferenceTheme</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColorPrimary">@color/colorTextPrimary</item>
        <item name="android:textColorSecondary">@color/colorTextSecondary</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:statusBarColor">@color/colorPrimaryDark</item>
        <item name="android:windowActivityTransitions">true</item>
        <item name="windowActionBar">false</item>
        <item name="windowActionModeOverlay">true</item>

        <!-- enable overlap of transitions -->
        <item name="android:windowContentTransitions">true</item>
        <item name="android:windowAllowEnterTransitionOverlap">true</item>
        <item name="android:windowAllowReturnTransitionOverlap">true</item>
    </style>

    <style name="DarkTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="preferenceTheme">@style/PreferenceTheme</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="popupMenuStyle">@style/PopupMenuDark</item>
        <item name="colorPrimary">@color/darkPrimary</item>
        <item name="colorPrimaryDark">@color/darkPrimary_dark</item>
        <item name="colorAccent">@color/darkAccent</item>

        <item name="android:statusBarColor">@color/darkPrimary_dark</item>
        <item name="colorControlNormal">@color/darkIcons</item>
        <item name="android:windowActivityTransitions">true</item>

        <!-- enable overlap of transitions -->
        <item name="android:windowContentTransitions">true</item>
        <item name="android:windowAllowEnterTransitionOverlap">true</item>
        <item name="android:windowAllowReturnTransitionOverlap">true</item>
    </style>

    <style name="LightTheme.Transparent" parent="LightTheme">
        <item name="android:windowTranslucentStatus">true</item>
        <!-- enable overlapping of exiting and entering activities-->
        <item name="android:windowAllowEnterTransitionOverlap">true</item>
        <item name="android:windowAllowReturnTransitionOverlap">true</item>
    </style>

    <style name="DarkTheme.Transparent" parent="DarkTheme">
        <item name="android:windowTranslucentStatus">true</item>
        <!-- enable overlapping of exiting and entering activities-->
        <item name="android:windowAllowEnterTransitionOverlap">true</item>
        <item name="android:windowAllowReturnTransitionOverlap">true</item>
    </style>

    <style name="PreferenceTheme" parent="@style/PreferenceThemeOverlay">
        <item name="preferenceScreenStyle">@style/Preference.PreferenceScreen</item>
        <item name="preferenceFragmentStyle">@style/PreferenceFragment</item>
        <item name="preferenceCategoryStyle">@style/PreferenceTheme.Category</item>
        <item name="preferenceStyle">@style/PreferenceTheme.Preference</item>
        <item name="preferenceInformationStyle">@style/PreferenceTheme.Information</item>
        <item name="checkBoxPreferenceStyle">@style/PreferenceTheme.CheckBoxPreference</item>
        <item name="switchPreferenceCompatStyle">@style/PreferenceTheme.SwitchPreferenceCompat
        </item>
        <item name="dialogPreferenceStyle">@style/PreferenceTheme.DialogPreference</item>
        <item name="editTextPreferenceStyle">
            @style/PreferenceTheme.DialogPreference.EditTextPreference
        </item>
        <item name="preferenceFragmentListStyle">@style/PreferenceFragmentList</item>
    </style>

    <style name="PreferenceTheme.Preference">
        <item name="android:layout">@layout/preference_material_custom</item>
    </style>

    <style name="PreferenceTheme.Category" parent="@style/Preference.Category">
        <item name="layout">@layout/preference_category_material_custom</item>
        <!-- The title should not dim if the category is disabled, instead only the preference children should dim. -->
        <item name="shouldDisableView">false</item>
        <item name="selectable">false</item>
    </style>

    <style name="PreferenceTheme.CheckBoxPreference" parent="@style/Preference.CheckBoxPreference">
        <item name="layout">@layout/preference_material_custom</item>
    </style>

    <style name="PreferenceTheme.SwitchPreferenceCompat" parent="@style/Preference.SwitchPreferenceCompat">
        <item name="layout">@layout/preference_material_custom</item>
    </style>

    <style name="PreferenceTheme.Information" parent="@style/Preference.Information">
        <item name="layout">@layout/preference_information_material_custom</item>
    </style>

    <style name="PreferenceTheme.DialogPreference" parent="@style/Preference.DialogPreference">
        <item name="layout">@layout/preference_material_custom</item>
    </style>

    <style name="PreferenceTheme.DialogPreference.EditTextPreference" parent="@style/Preference.DialogPreference.EditTextPreference">
        <item name="layout">@layout/preference_material_custom</item>
        <item name="dialogLayout">@layout/preference_dialog_edittext_material_custom</item>
    </style>

    <style name="LightTheme.SimpleCoordinatorTheme">
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
    </style>

    <style name="AppTheme.AppBarOverlay.Dark" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:statusBarColor">@color/darkPrimary_dark</item>
    </style>

    <style name="CollapsingTextAppearance" parent="Base.TextAppearance.AppCompat.Widget.ActionBar.Title" />

    <style name="CollapsingTextAppearance.Inverse">
        <item name="android:textSize">30sp</item>
    </style>

    <style name="SPL">
    </style>

    <style name="SPL.SnackBar">
        <item name="android:elevation">6dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="SPL.SnackBar.Layout">
        <item name="android:background">@color/colorPrimary</item>
    </style>

    <style name="SPL.SnackBar.Text">
        <item name="android:textSize">14sp</item>
        <item name="android:gravity">left</item>
        <item name="android:padding">10dp</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="SPL.SnackBar.Button">
        <item name="android:padding">10dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="SPL.SnackBar.Button.Decline">
        <item name="android:background">@null</item>
        <item name="android:layout_width">40dp</item>
    </style>
</resources>
