<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="BaseAppTheme.Launcher">
        <item name="android:windowBackground">@drawable/launcher_drawable</item>
        <item name="spinnerStyle">@style/MySpinner</item>
        <item name="android:windowLightNavigationBar">false</item>
        <item name="android:navigationBarColor">@color/darkPrimary</item>
    </style>

    <style name="BaseAppTheme" parent="Theme.MaterialComponents">
        <item name="colorPrimary">@color/darkPrimary</item>
        <item name="colorPrimaryDark">@color/darkPrimary_dark</item>
        <item name="colorAccent">@color/darkAccent</item>
        <item name="titleBarColor">@color/darkPrimary</item>
        <item name="cardTitleBarColor">@color/darkPrimary</item>
        <item name="shareIconColor">@color/darkIcons</item>
        <item name="exploreIconColor">@color/darkIcons</item>
        <item name="navBarColor">@color/cardview_dark_background</item>
        <item name="android:colorControlActivated">@color/materialGrey</item>
        <!--<item name="android:textColorSecondary">#757575</item>-->
        <!-- enable overlap of transitions -->
        <item name="android:windowContentTransitions">true</item>
        <item name="android:windowAllowEnterTransitionOverlap">true</item>
        <item name="android:windowAllowReturnTransitionOverlap">true</item>

        <item name="android:textColorHighlight">@color/dark_primary_text_color_selector</item>
        <item name="android:textColorPrimary">@color/dark_primary_text_color_selector</item>
        <item name="android:textColor">@color/dark_secondary_text_color_selector</item>

        <!--MaterialDrawer specific values -->
        <item name="material_drawer_background">@color/material_drawer_dark_background</item>
        <item name="material_drawer_primary_text">@color/material_drawer_dark_primary_text</item>
        <item name="material_drawer_primary_icon">@color/material_drawer_dark_primary_icon</item>
        <item name="material_drawer_secondary_text">@color/material_drawer_dark_secondary_text</item>
        <item name="material_drawer_hint_text">@color/material_drawer_dark_hint_text</item>
        <item name="material_drawer_divider">@color/material_drawer_dark_divider</item>
        <item name="material_drawer_selected">@color/material_drawer_dark_selected</item>
        <item name="material_drawer_selected_text">@color/colorAccent</item>
        <item name="material_drawer_header_selection_text">@color/material_drawer_header_selection_text</item>
        <item name="spinnerStyle">@style/MySpinner</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="BaseAppTheme.ColoredNavigation" parent="BaseAppTheme">
        <item name="android:windowLightNavigationBar">false</item>
        <item name="android:navigationBarColor">@color/cardview_dark_background</item>
    </style>
</resources>