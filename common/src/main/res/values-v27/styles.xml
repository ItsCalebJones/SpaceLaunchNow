<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="BaseAppTheme.Launcher">
        <item name="android:windowBackground">@drawable/launcher_drawable</item>
        <item name="spinnerStyle">@style/MySpinner</item>
        <item name="android:windowLightNavigationBar">false</item>
        <item name="android:navigationBarColor">@color/primary</item>
    </style>

    <style name="BaseAppTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="titleBarColor">@color/colorPrimary</item>
        <item name="cardTitleBarColor">@color/colorPrimary</item>
        <item name="shareIconColor">@color/md_grey_700</item>
        <item name="exploreIconColor">@color/colorAccent</item>
        <item name="navBarColor">?android:attr/windowBackground</item>
        <item name="android:colorControlActivated">@color/materialGrey</item>
        <item name="android:textColorPrimary">#212121</item>
        <!--<item name="android:textColorSecondary">#757575</item>-->
        <!-- enable overlap of transitions -->
        <item name="android:windowContentTransitions">true</item>
        <item name="android:windowAllowEnterTransitionOverlap">true</item>
        <item name="android:windowAllowReturnTransitionOverlap">true</item>

        <!--MaterialDrawer specific values -->
        <item name="material_drawer_background">@color/material_drawer_background</item>
        <item name="material_drawer_primary_text">@color/material_drawer_primary_text</item>
        <item name="material_drawer_primary_icon">@color/material_drawer_primary_icon</item>
        <item name="material_drawer_secondary_text">@color/material_drawer_secondary_text</item>
        <item name="material_drawer_hint_text">@color/material_drawer_hint_text</item>
        <item name="material_drawer_divider">@color/material_drawer_divider</item>
        <item name="material_drawer_selected">@color/material_drawer_selected</item>
        <item name="material_drawer_selected_text">@color/material_drawer_selected_text</item>
        <item name="material_drawer_header_selection_text">
            @color/material_drawer_header_selection_text
        </item>
        <item name="spinnerStyle">@style/MySpinner</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="BaseAppTheme.ColoredNavigation" parent="BaseAppTheme">
        <item name="android:windowLightNavigationBar">true</item>
        <item name="android:navigationBarColor">?android:attr/windowBackground</item>
    </style>
</resources>